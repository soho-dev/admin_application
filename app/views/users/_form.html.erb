<div class="row widget-box">
  <div class="widget-header">
    <h4 class="widget-title">Create User</h4>
  </div>
  <div class="col-xs-12">
    <div class='widget-body'>
      <div class='widget-main'>
        <%= form_for @user, :html => {:class => "form-horizontal"} do |f| %>
        <div class="form-group">
          <label class="col-sm-3 control-label no-padding-right" for="form-field-1">First Name</label>
          <div class="col-sm-9">
            <%= f.text_field :first_name, :class => "col-xs-10 col-sm-5", :placeholder => "First Name", required: true%>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Last Name</label>
          <div class="col-sm-9">
            <%= f.text_field :last_name, :class => "col-xs-10 col-sm-5", :placeholder => "Last Name", required: true%>
          </div>
        </div>
          <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Email</label>
            <div class="col-sm-9">
              <%= f.text_field :email, :class => "col-xs-10 col-sm-5", :placeholder => "Email", required: true%>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">User Role</label>
            <div class="col-sm-9">
              <%= f.select :role, ["Admin", "Customer"], {include_blank: 'Select an Role'}, {class: "col-xs-10 col-sm-5", required: true} %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Contact Number</label>
            <div class="col-sm-9">
              <%= f.text_field :contact, :class => "col-xs-10 col-sm-5", :placeholder => "Contact Number", required: true %>
            </div>
          </div>
          <div class="space-4"></div>
          <div class="clearfix form-actions">
            <div class="col-md-offset-3 col-md-9">
              <%= f.submit "Submit", :class => "btn btn-info" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
